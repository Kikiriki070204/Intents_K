<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intents_main">

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Holaaaa"
        android:textAlignment="center"
        android:paddingTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/n1"
        android:textColor="@color/white"
        >
    </TextView>

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/msg">

        <TextView
            android:id="@+id/imp_ttl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Implicitos"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:textSize="20dp"
            >
        </TextView>
        <Button
            android:layout_below="@id/imp_ttl"
            android:id="@+id/imp1"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/n2"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:text="@string/Facebook"
            >
        </Button>
        <Button
            android:id="@+id/imp2"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/n2"
            android:layout_below="@id/imp_ttl"
           android:layout_toRightOf="@id/imp1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:text="@string/GG"

            >
        </Button>
        <Button
            android:id="@+id/imp3"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/n2"
            android:layout_below="@id/imp1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:text="@string/YT"
            >
        </Button>
        <Button
            android:id="@+id/imp4"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/n2"
            android:layout_below="@id/imp2"
            android:layout_toRightOf="@id/imp3"
            android:layout_marginLeft="50dp"
            android:text="@string/Tetris"
            >
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relex"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/rel"
        >

        <TextView
            android:id="@+id/exp_ttl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explicitos"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:textSize="20dp"
            >
        </TextView>
        <Button
            android:layout_below="@id/exp_ttl"
            android:id="@+id/exp1"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/n2"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:text="Calculadora"
            >
        </Button>
        <Button
            android:id="@+id/exp2"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/n2"
            android:layout_below="@id/exp_ttl"
            android:layout_toRightOf="@id/exp1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:text="Hola"

            >
        </Button>
        <Button
            android:id="@+id/exp3"
            android:layout_width="125dp"
            android:layout_height="52dp"
            android:backgroundTint="@color/n2"
            android:layout_below="@id/exp1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:text="Bandera"
            >
        </Button>
        <Button
            android:id="@+id/exp4"
            android:layout_width="125dp"
            android:layout_height="52dp"
            android:backgroundTint="@color/n2"
            android:layout_below="@id/exp2"
            android:layout_toRightOf="@id/exp3"
            android:layout_marginLeft="50dp"
            android:text="Adios"
            >
        </Button>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>