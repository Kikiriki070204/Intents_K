<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/opn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:hint="..."
        android:textColor="@color/black"
        android:textSize="40sp">
    </TextView>
    <TextView
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/opn"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:hint="..."
        android:textColor="@color/black"
        android:textSize="40sp"></TextView>

    <View
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/res"
        android:background="@color/bg"
        >
    </View>

    <Button
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/bar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="C"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/grey"
        >
    </Button>

    <Button
        android:id="@+id/div"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/bar"
        android:layout_toRightOf="@id/c"
        android:layout_marginLeft="10dp"
        android:text="รท"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/btn_text"
        >
    </Button>

    <Button
        android:id="@+id/mul"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/bar"
        android:layout_toRightOf="@id/div"
        android:layout_marginLeft="10dp"
        android:text="x"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/btn_text"
        >
    </Button>

    <Button
        android:id="@+id/rt"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/bar"
        android:layout_toRightOf="@id/mul"
        android:layout_marginLeft="10dp"
        android:text="-"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/btn_text"
        android:layout_marginRight="10dp"
        >
    </Button>

    <Button
        android:id="@+id/n7"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/c"
        android:layout_marginLeft="10dp"
        android:text="7"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        >
    </Button>

    <Button
        android:id="@+id/n8"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/div"
        android:layout_toRightOf="@id/n7"
        android:layout_marginLeft="10dp"
        android:text="8"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        >
    </Button>

    <Button
        android:id="@+id/n9"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/mul"
        android:layout_toRightOf="@id/n8"
        android:layout_marginLeft="10dp"
        android:text="9"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        >
    </Button>
    <Button
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/rt"
        android:layout_toRightOf="@id/mul"
        android:layout_marginLeft="10dp"
        android:text="+"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/btn_text"
        android:layout_marginRight="10dp"
        >
    </Button>

    <Button
        android:id="@+id/n4"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/n7"
        android:layout_marginLeft="10dp"
        android:text="4"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        >
    </Button>
    <Button
        android:id="@+id/n5"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/n8"
        android:layout_toRightOf="@id/n4"
        android:layout_marginLeft="10dp"
        android:text="5"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        >
    </Button>

    <Button
        android:id="@+id/n6"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/n9"
        android:layout_toRightOf="@id/n5"
        android:layout_marginLeft="10dp"
        android:text="6"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        >
    </Button>

    <Button
        android:id="@+id/pt"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/sum"
        android:layout_toRightOf="@id/mul"
        android:layout_marginLeft="10dp"
        android:text="."
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/btn_text"
        android:layout_marginRight="10dp"
        >
    </Button>

    <Button
        android:id="@+id/n1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/n4"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        >
    </Button>

    <Button
        android:id="@+id/n2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/n5"
        android:layout_toRightOf="@id/n4"
        android:layout_marginLeft="10dp"
        android:text="2"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        >
    </Button>


    <Button
        android:id="@+id/n3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/n6"
        android:layout_toRightOf="@id/n2"
        android:layout_marginLeft="10dp"
        android:text="3"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        >
    </Button>

    <Button
        android:id="@+id/dt"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/pt"
        android:layout_toRightOf="@id/mul"
        android:layout_marginLeft="10dp"
        android:text="Del."
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/btn_text"
        android:layout_marginRight="10dp"
        >
    </Button>

    <Button
        android:id="@+id/n0"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/n3"
        android:layout_toLeftOf="@id/total"
        android:layout_marginLeft="10dp"
        android:text="0"
        android:textSize="20dp"
        android:backgroundTint="@color/btn"
        android:textColor="@color/black"
        >
    </Button>

    <Button
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/dt"
        android:layout_toRightOf="@id/mul"
        android:layout_marginLeft="10dp"
        android:text="="
        android:textSize="20dp"
        android:backgroundTint="@color/btn_text"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        >
    </Button>

</RelativeLayout>